@model GreenvaleStaffPortal.Models.LoggedCall
@{
    ViewBag.Title = "Details";
}

<div id="callDetailsContainer">
    <h2>Call Information</h2>
    <div class="fieldContainer">
        <span class="label">Call No.:</span>
        <span class="value">@Model.CallNo</span>
        <span class="helptext">This is the unique reference you should quote when contacting the helpdesk.</span>
    </div>
    <div class="fieldContainer">
        <span class="label">Time Reported:</span>
        <span class="value">@Model.CallTime.ToString("dd MMM yyy HH:mm")</span>
        <span class="helptext">This is the date and time the issue was recorded.</span>
    </div>
    <div class="fieldContainer">
        <span class="label">Issue Owner:</span>
        <span class="value">@Model.OwnerDescription</span>
        <span class="helptext">This is the IT staff member dealing with your query.</span>
    </div>
    <h2>Call Category</h2>
    <div class="fieldContainer">
        <span class="label">Department:</span>
        <span class="value">@Model.SystemDescription</span>
        <span class="helptext">This is the top level department your issue relates to.</span>
    </div>
    <div class="fieldContainer">
        <span class="label">Category:</span>
        <span class="value">@Model.SubSystemDescription</span>
        <span class="helptext">This is the category of your issue.</span>
    </div>
    <div class="fieldContainer">
        <span class="label">Problem:</span>
        <span class="value">@Model.ProblemDescription</span>
        <span class="helptext">This is the problem description of your issue.</span>
    </div>
    <h2>Call Notes</h2>
    <div class="fieldContainer">
        <span class="value">@MvcHtmlString.Create(Html.Encode(Model.CallNotes).Replace("\\", "<br />"))</span>
    </div>
    <p>
        @Html.ActionLink("Back to List", "Index", new { category = Model.System })
    </p>
</div>

