DROP DATABASE IF EXISTS bugtracker_development;
DROP DATABASE IF EXISTS bugtracker_test;
DROP DATABASE IF EXISTS bugtracker_production;

CREATE DATABASE bugtracker_development;
CREATE DATABASE bugtracker_test;
CREATE DATABASE bugtracker_production;

GRANT ALL ON bugtracker_development.* TO 'bugtracker'@'localhost' IDENTIFIED BY 'beanish';
GRANT ALL ON bugtracker_test.* TO 'bugtracker'@'localhost' IDENTIFIED BY 'beanish';
GRANT ALL ON bugtracker_production.* TO 'bugtracker'@'localhost' IDENTIFIED BY 'beanish';
